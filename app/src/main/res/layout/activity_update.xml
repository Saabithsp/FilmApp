<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:srcCompat="@drawable/arrow2" />

                <TextView
                    android:id="@+id/cartView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/showNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Name" />

                <Button
                    android:id="@+id/updateNameBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Update Name" />

                <TextView
                    android:id="@+id/showEmailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Email" />

                <Button
                    android:id="@+id/updateEmailBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Email" />

                <TextView
                    android:id="@+id/showPswdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Password" />

                <Button
                    android:id="@+id/updatePswdBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Password" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#3f37c9"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
